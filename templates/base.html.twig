        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        {# Feuille de Script Lihgtbox #}
        <script src="{{ asset('js/lihgtbox.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
